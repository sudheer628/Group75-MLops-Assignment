[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    htmlcov,
    .mypy_cache

# Error codes to ignore:
# E203 - whitespace before ':'
# W503 - line break before binary operator  
# E501 - line too long (handled by black)
# F401 - unused imports (common in development)
# F541 - f-string without placeholders (minor issue)
# F841 - unused variables (common in development)
# C901 - function too complex (acceptable for MLOps)
# E402 - module level import not at top (test files)
ignore = 
    E203,
    W503,
    E501,
    F401,
    F541,
    F841,
    C901,
    E402

# Error codes to always check
select = E,W,F,C

# Per-file ignores:
# __init__.py - Allow unused imports
# tests/* - Allow unused imports and redefinitions in tests
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811